<UserControl x:Class="JoyfulStickGUI.AxisBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JoyfulStickGUI"
             mc:Ignorable="d" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Foreground="{x:Null}" Background="#222222" Height="18">
    <Grid>
        <Grid x:Name="m_Grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>
            <Rectangle Fill="#FF0000AF" Margin="0,0,0,0" Stroke="#FF0000AF" Grid.Column="1"/>
        </Grid>
        <Label x:Name="m_ValueLabel" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Content=""></Label>
    </Grid>
</UserControl>
